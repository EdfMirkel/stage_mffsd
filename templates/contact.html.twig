{% block body %}

<!-- header -->
{% include "header.html.twig" %}
<!-- /.header -->

	<section class="inner-header">
		<div class="container">
			<div class="row">
				<div class="col-md-12 sec-title colored text-center">
					<h2>Contact US</h2>
					<ul class="breadcumb">
						<li><a href="index.html">Home</a></li>
						<li><i class="fa fa-angle-right"></i></li>
						<li><span>Contact</span></li>
					</ul>
					<span class="decor"><span class="inner"></span></span>
				</div>
			</div>
		</div>
	</section>


	<section class="contact-content sec-padding">
		<div class="container">
			<div class="sec-title text-center">
				<p>Give us a call or just shoot us an email - we'd love to hear from you!</p>
			</div>
			<div class="google-map" id="contact-page-google-map" data-icon-path="img/resources/map-marker.png"
				data-map-lat="-17.780305" data-map-lng="31.021328" data-map-zoom="10" data-map-title="Envato HQ">
				<iframe width="100%" height="485" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
					id="gmap_canvas"
					src="https://maps.google.com/maps?width=1920&amp;height=485&amp;hl=en&amp;q=Rabat,%20Morocco%20Rabat+(MFFSD)&amp;t=&amp;z=15&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
				<a href='http://mapswebsite.net/fr'>http://mapswebsite.net/fr</a>
				<script type='text/javascript'
					src='https://embedmaps.com/google-maps-authorization/script.js?id=36b57b65c99490f47553c83bd06af019bbf4d7e8'></script>

			</div>
			<div class="row" style="margin-top: 10em;">
				<div class="col-md-8">
					<h2>Contact Form</h2>
					<form action="http://www.igniteyouth.co.zw/inc/sendemail.php" class="contact-form row"
						id="contact-page-contact-form">
						<div class="col-md-6">
							<input type="text" name="name" placeholder="Name">
							<input type="text" name="email" placeholder="Email">
							<input type="text" name="phone" placeholder="Phone">

						</div>
						<div class="col-md-6">
							<textarea name="message" placeholder="Message" cols="30" rows="10"
								style="height: 100%;"></textarea>
						</div>
						<div class="col-md-12"><button class="thm-btn" type="submit">Send</button></div>
					</form>
				</div>
				<div class="col-md-4">
					<h2>Contacts</h2>
					<ul class="contact-info">
						<li>
							<div class="icon-box">
								<div class="inner">
									<i class="fa fa-map-marker"></i>
								</div>
							</div>
							<div class="content-box">
								<h4>Address</h4>
								<p>Rabat, <br>
									Maroc</p>
							</div>
						</li>
						<li>
							<div class="icon-box">
								<div class="inner">
									<i class="fa fa-phone"></i>
								</div>
							</div>
							<div class="content-box">
								<h4>Phone</h4>
								<p> +212 667 877 729</p>
							</div>
						</li>
						<li>
							<div class="icon-box">
								<div class="inner">
									<i class="fa fa-envelope-o"></i>
								</div>
							</div>
							<div class="content-box">
								<h4>Email</h4>
								<p>mfd.morocco@gmail.com</p>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

